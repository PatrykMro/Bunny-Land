<!DOCTYPE html>
<html>
  <head>
    <title>BunnyLand</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar bg-primary">
      <div class="container">
        <a class="navbar-brand app-name">Bunny-Land</a>
        <form class="form-inline">
          <div class="btn-group">
            <button type="button" class="btn dropdown-toggle btn-lg navbar-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Action
            </button>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <a class="dropdown-item" href="#">Something else here</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item last-one" href="#">Separated link</a>
            </div>
        </div>
        <button class="btn btn-lg navbar-login-logout-btn" type="submit a">Login</button>

      </form>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
