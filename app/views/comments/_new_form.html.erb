<%= simple_form_for [post, comment], remote: true, html: { class: 'form-vertical comment-form' } do |f| %>
  <%= f.input :body, as: :text, label: false, placeholder: 'Enter here your comment...', input_html: { class: 'new-comment' } %>
  <%= f.button :submit, class: 'btn btn-primary create-comment-button', hidden: true %>
<% end %>
