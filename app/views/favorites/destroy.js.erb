$('#post-<%= @post.id %> .carrot').replaceWith("<%= j render 'create', post: @post %>")

var count = $('#post-<%= @post.id %> .favorites_count');

var findNumber = $(count).html();
var intNumber = parseInt(findNumber);
var newNumber = intNumber - 1;

if (newNumber == 0) {
  $(count).html('');
} else {
  $(count).html(newNumber);
}
