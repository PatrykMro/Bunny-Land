<div class="container">
  <% @posts.each do |post| %>
    <div class="card">
      <h5 class="card-header"><%= post.user.username %>
      <div class="card-body">
        <p class="card-text"><%= post.text %></p>
        <%= link_to 'View Post', post, class: "btn btn-primary" %>
      </div>
    </div>
    <hr/>
  <% end %>
</div>
