<div class="container">
  <div class="card margin-bottom-top">
    <div class="card-body">
      <%= "#{@posts.count} posts are on our bunny page" %>
      <br/>
    </div>
  </div>
  <% @posts.each do |post| %>
    <div class="card">
      <h5 class="card-header"><%= post.user.username %>
      <div class="card-body">
        <p class="card-text"><%= post.text %></p>
        <%= link_to 'View Post', post, class: "btn btn-primary" %>
      </div>
    </div>
    <hr/>
  <% end %>

  <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, inter_window: 1, outer_window: 0 %>
</div>
